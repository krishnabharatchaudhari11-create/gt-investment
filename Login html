      <a href="contact.html">Contact</a>
    </nav>
    <button class="burger" aria-label="menu">☰</button>
  </header>

  <main class="container">
    <div class="card" style="max-width:520px;margin:auto">
      <h2>Login / Signup (Demo)</h2>
      <label>Email</label>
      <input id="email" type="email" />
      <label>Name</label>
      <input id="name" />
      <div class="row">
        <button id="signupBtn" class="btn">Signup / Login</button>
        <button id="logoutBtn" class="btn ghost">Logout</button>
      </div>
      <div style="margin-top:12px" id="userInfo" class="muted"></div>
    </div>
  </main>

  <footer class="footer">
    <div>© <span id="year3"></span> GT Investment — Demo site</div>
  </footer>

  <script>
    document.getElementById('year3').textContent = new Date().getFullYear();
    const USER_KEY = 'gt_user_demo';
    function setUser(u){ localStorage.setItem(USER_KEY, JSON.stringify(u)); render(); }
    function getUser(){ try{ return JSON.parse(localStorage.getItem(USER_KEY)); }catch(e){ return null; } }
    function render(){
      const u = getUser();
      document.getElementById('userInfo').textContent = u ? 'Logged in: ' + (u.name||u.email) : 'Not logged in';
    }
    document.getElementById('signupBtn').addEventListener('click', ()=>{
      const e = document.getElementById('email').value.trim();
      const n = document.getElementById('name').value.trim();
      if(!e){ alert('Enter email'); return; }
      setUser({ email:e, name:n || e.split('@')[0] });
      alert('Logged in (demo).');
      render();
    });
    document.getElementById('logoutBtn').addEventListener('click', ()=>{ localStorage.removeItem(USER_KEY); render(); alert('Logged out'); });
    render();
  </script>
</body>
</html>
